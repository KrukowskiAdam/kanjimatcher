{
    "functions": {
        "source": "functions",
        "runtime": "nodejs20",
        "predeploy": [
            "npm --prefix $RESOURCE_DIR run build"
        ]
    },
    "hosting": {
        "site": "svelte-kanji-web-app",
        "public": "build/client",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "function": "ssr"
            }
        ]
    }
}